#include <stdio.h>
#include <stdlib.h>

int main(void) {
    
    int nmr1, nmr2, op;
    
    printf("Digite 1 para somar, 2 para subtrair, 3 para multiplicar, 4 para dividir: \n"); 
    scanf("%d", &op); 
    
    printf("Digite o primeiro número: \n");
    scanf("%d", &nmr1);
    
    printf("Digite o segundo número: \n");
    scanf("%d", &nmr2);
    
    if (op == 1) {
        
        int resultado = nmr1 + nmr2;
        printf("O resultado da soma é: %d\n", resultado);
    } else if (op == 2) {
        
        int resultado = nmr1 - nmr2;
        printf("O resultado da subtração é: %d\n", resultado);
    } else if (op == 3) {
        int resultado = nmr1 * nmr2 ;
        printf("O resultado da multiplicação é: %d \n", resultado);
    }
    else if(op == 4){
        int resultado = nmr1 / nmr2 ;
        printf("O resultado da divisão é: %d \n", resultado);
    }

    return 0;
}
