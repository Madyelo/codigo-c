#include <stdio.h>
#include <stdlib.h>

main(void){
    int nmr1, nmr2, op;
    
    printf("Digite 1 para somar ou 2 para subtrair: \n"); 
    scanf("%d", &op ); 
    
    printf("Digite o primeiro número : \n");
    scanf("%d", &nmr1);
    
    printf("Digite o segundo número : \n");
    scanf("%d", &nmr2);
    
    if(op == 1){
      int resultado = nmr1 + nmr2;
        printf("O resultado da soma e: %d, resultado");
    }
    else if (op == 2){
      int resultado = nmr1 - nmr2;
        printf("O resultado da subtracao e: %d, resultado");
    }
return 0;
}
